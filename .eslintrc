rules:
  indent:
    - 2
    - 2
  linebreak-style:
    - 2
    - unix
  no-alert:
    - 2
  no-console:
    - 2
  no-debugger:
    - 2
  quotes:
    - 2
    - single
  react/display-name:
    - 0
  react/jsx-boolean-value:
    - 1
  react/jsx-no-undef:
    - 1
  react/jsx-quotes:
    - 1
  react/jsx-sort-prop-types:
    - 1
  react/jsx-sort-props:
    - 0
  react/jsx-uses-react:
    - 1
  react/jsx-uses-vars:
    - 1
  react/no-did-mount-set-state:
    - 1
  react/no-did-update-set-state:
    - 1
  react/no-multi-comp:
    - 1
  react/no-unknown-property:
    - 1
  react/prop-types:
    - 1
  react/react-in-jsx-scope:
    - 1
  react/self-closing-comp:
    - 1
  react/sort-comp:
    - 1
  react/wrap-multilines:
    - 1
env:
  browser: true
  node: true
ecmaFeatures:
  jsx: true
  modules: true
  templateStrings: true
plugins:
  - react
globals:
  "afterEach": true
  "beforeEach": true
  "describe": true
  "expect": true
  "it": true
  "document": true
  "require": true
  "module": true
  "Firebase": true
