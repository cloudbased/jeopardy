{
  "name": "jeopardy",
  "version": "1.0.0",
  "description": "",
  "main": "app.js",
  "scripts": {
    "build": "npm run build-js && npm run build-css",
    "build-css": "stylus ./src/styles/app.styl -o ./app/css/app.css",
    "build-js": "browserify -t babelify ./src/scripts/app.js -o ./app/js/app.js -v",
    "deploy": "cd app && cf push jeopardy -m 128M",
    "eslint": "eslint ./src/scripts --ext=.js --ext=.jsx",
    "jsxcs": "jsxcs ./src/scripts",
    "lint": "npm run eslint && npm run jsxcs",
    "serve": "browser-sync start --server 'app' --files 'index.html,app/**/*' --no-notify",
    "watch": "npm run watch-js & npm run watch-css",
    "watch-css": "stylus -w ./src/styles/app.styl -o ./app/css/app.css",
    "watch-js": "watchify -t babelify ./src/scripts/app.js -o ./app/js/app.js -v"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "firebase": "^5.0.0",
    "jquery": "^3.3.1",
    "react": "^16.2.0",
    "reactfire": "^1.0.0",
    "watchify": "^3.2.3"
  },
  "devDependencies": {
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.2.1",
    "babelify": "^8.0.0",
    "browserify": "^15.2.0",
    "debug": "^3.1.0",
    "eslint": "^4.16.0",
    "eslint-plugin-react": "^7.5.1",
    "firebase": "^5.0.0",
    "jsxcs": "^0.2.1",
    "react": "^16.2.0"
  }
}
